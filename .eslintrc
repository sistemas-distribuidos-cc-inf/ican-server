{
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "no-unused-vars" : 2,
        "no-undef" : 2
    },
    "ecmaFeatures": {
        "modules": true,
        "spread" : true,
        "restParams" : true
    },
    "env" : {
        "browser" : true,
        "node" : true,
        "es6" : true
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "extends": "eslint:recommended"
}